{
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "@typescript-eslint"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "no-nested-ternary": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "custom/no-nested-links": [
      "error",
      {
        "message": "Do not nest <a> or <button> inside <Link>. Use Link className prop directly or wrap Link's children without semantic HTML tags."
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.tsx", "*.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  ]
}
