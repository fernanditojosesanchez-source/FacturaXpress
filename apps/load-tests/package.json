{
  "name": "@facturaxpress/load-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Load testing suite with k6",
  "scripts": {
    "test:smoke": "k6 run scenarios/smoke.js",
    "test:load": "k6 run scenarios/load.js",
    "test:stress": "k6 run scenarios/stress.js",
    "test:spike": "k6 run scenarios/spike.js",
    "test:chaos": "k6 run scenarios/chaos.js",
    "test:all": "npm run test:smoke && npm run test:load && npm run test:stress",
    "report": "k6 run --out json=results.json scenarios/load.js && node utils/generate-report.js"
  },
  "keywords": [
    "k6",
    "load-testing",
    "performance",
    "stress-testing"
  ]
}
